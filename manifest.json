{
  "manifest_version": 2,

  "name": "Change mode OREMANGA",
  "description": "This extension is using for automatically change mode of view to \"all page\" in OREMANGA website",
  "version": "1.0",

  "browser_action": {
    "default_title": "Change mode OREMANGA"
  },

  "background":
  {
      "scripts": ["jquery.min.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://www.oremanga.com/*"],
      "js": ["jquery.min.js", "changemode.js"],
      "run_at": "document_end"
    }
  ]

}
